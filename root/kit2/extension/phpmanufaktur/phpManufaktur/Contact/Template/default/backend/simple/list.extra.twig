{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'framework/body.twig') %}
{% block stylesheet %}
    {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Contact/Template/default/backend/simple/css/list.css" media="screen, projection" />
{% endblock %}

{% block content %}
  <h1>{{ 'Extra field type list'|trans }}</h1>
  {% if message|length > 0 %}
    <div class="message">{{ message }}</div>
  {% endif %}

  {% include '@phpManufaktur/Contact/Template/default/backend/form/list.extra.twig' %}

  <div>
    <p><a href="{{ FRAMEWORK_URL }}/admin/contact/simple/extra/edit">{{ 'Add a new extra field'|trans }}</a></p>
  </div>

{% endblock content %}
