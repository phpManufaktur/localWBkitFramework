{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'framework/body.twig') %}
{% block stylesheet %}
    {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Contact/Template/default/backend/simple/css/contact.css" media="screen, projection" />
{% endblock %}

{% block content %}
  {% if form.vars.value.category_type_id > 0 %}
    <h1>{{ 'Edit the category %category_type_name%'|trans({'%category_type_name%':form.vars.value.category_type_name}) }}</h1>
  {% else %}
    <h1>{{ 'Create a new category'|trans }}</h1>
  {% endif %}
  {% if message|length > 0 %}
    <div class="message">{{ message }}</div>
  {% endif %}

  {% include '@phpManufaktur/Contact/Template/default/backend/form/edit.category.twig' %}

  <div>
    <p><a href="{{ FRAMEWORK_URL }}/admin/contact/simple/category/list">{{ 'Change to the overview'|trans }}</a></p>
  </div>
{% endblock content %}
