{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'framework/body.twig') %}
{% block stylesheet %}
    {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/Event/Template/default/import/css/kitevent.css" media="screen, projection" />
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <h1>{{ 'Import events from kitEvent'|trans }}</h1>
  {% if message|length > 0 %}
    <div class="message">{{ message }}</div>
  {% endif %}
  {% if app.translator.locale == 'de' %}
    {# german translation #}
    <p><b>Achtung:</b></p>
    <p>Sie müssen zunächst alle <a href="{{ FRAMEWORK_URL ~ '/admin/contact/import/keepintouch' }}">KeepInTouch Kontakte in kitFramework <i>Contact</i></a> importieren, bevor Sie die Datenübernahme aus kitEvent starten.</p>
  {% else %}
    {# english translation #}
    <p><b>Attention:</b></p>
    <p>You must <a href="{{ FRAMEWORK_URL ~ '/admin/contact/import/keepintouch' }}">import all KeepInTouch contacts into kitFramework <i>Contact</i></a> before you start the import from kitEvent.</p>
  {% endif %}

  {% if import_is_possible %}
    <p><i class="icon-puzzle-piece icon-3x pull-left"></i>&nbsp;<a href="{{ FRAMEWORK_URL ~ '/admin/event/import/kitevent/import' }}">{{ 'Start import from kitEvent'|trans }}</a></p>
  {% endif %}

{% endblock content %}
