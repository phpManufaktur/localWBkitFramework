{% extends getTemplateFile('@phpManufaktur/Basic/Template', 'kitcommand/iframe.body.twig') %}
{% block title %}{{ 'Facebook Gallery Help'|trans }}{% endblock %}
{% block description %}{{ 'First Steps and Helpfile for the kitFramework Facebook Gallery'|trans }}{% endblock %}
{% block stylesheet %}
  {{ parent() }}
  <link rel="stylesheet" type="text/css" href="{{ MANUFAKTUR_URL }}/FacebookGallery/Template/default/css/frontend.css" media="screen, projection" />
{% endblock stylesheet %}
{% block content %}
  <h2>FacebookGallery: {{ 'Available galleries'|trans }}</h2>
  <p>{{ 'The facebook ID <b>%facebook_id%</b> provide the following galleries'|trans({'%facebook_id%':facebook_id}) }}:</p>
  {% for gallery in galleries.data %}
    <div class="gallery_container">
      <div class="label">{{ 'Gallery'|trans }}</div>
      <div class="value">{{ gallery.name }}</div>
      <div class="clear_item"></div>
      <div class="label">{{ 'ID'|trans }}</div>
      <div class="value"><span class="copy_clipboard" title="{{ 'Copy to clipboard'|trans }}" onclick="javascript:copyToClipboard('{{ gallery.id }}');"></span>{{ gallery.id }}</div>
      <div class="clear_item"></div>
      <div class="label">{{ 'Type'|trans }}</div>
      <div class="value">{% set type = 'GALLERY_TYPE_' ~ gallery.type|upper %}{{ type|trans }}</div>
      <div class="clear_item"></div>
      <div class="label">{{ 'Created at'|trans }}</div>
      <div class="value">{{ gallery.created_time|date('d.m.Y - H:i') }}</div>
      <div class="clear_item"></div>
      <div class="label">{{ 'kitCommand' }}</div>
      <div class="value"><span class="copy_clipboard" title="{{ 'Copy to clipboard'|trans }}" onclick="javascript:copyToClipboard('~~ facebookgallery id[{{ gallery.id }}] ~~');"></span><code>~~ facebookgallery id[{{ gallery.id }}] ~~</code></div>
      <div class="clear_item"></div>
    </div>
    <div class="clear_container"></div>
  {% endfor %}
{% endblock %}
{% block footer %}
  {{ parent() }}
  <script type="text/javascript">
    function copyToClipboard (text) {
      window.prompt("{{ 'Copy to clipboard: <CTRL>+C, Enter'|trans }}", text);
    }
  </script>
{% endblock %}
